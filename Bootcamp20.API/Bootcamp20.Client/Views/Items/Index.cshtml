@{
    ViewBag.Title = "Index";
}

<h2>Index Item</h2>
<div class="container">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="SaveTampil()">Create New</button>
    <select class="form-control col-md-4 id=" searchby">
        <option value="0">SearchBy</option>
        <option value="1">Item</option>
        <option value="2">Suppier</option>
        <option value="3">CreateDate</option>
    </select>
    <input type="text" class="form-control col-lg-1" placeholder="Search" id="cari" />
    <button type="button" class="btn btn-primary col-lg-1" onclick="Search()">Find</button>
 
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Item Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Stock
                </th>
                <th>
                    Supplier
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody id="tBody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">x</button>
                <h4 class="modal-title" id="myModalLabel">Item Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Name" />
                        <input type="hidden" class="form-control" id="NameOld" />
                    </div>
                    <div class="form-group">
                        <label for="Price">Price</label>
                        <input type="text" class="form-control" id="Price" placeholder="Price" />
                        <input type="hidden" class="form-control" id="PriceOld" />
                    </div>
                    <div class="form-group">
                        <label for="Stock">Stock</label>
                        <input type="text" class="form-control" id="Stock" placeholder="Stock" />
                        <input type="hidden" class="form-control" id="StockOld" />
                    </div>
                    <div class="form-group">
                        <label for="Supplier">Supplier</label>
                        <select class="form-control" id="Supplier" placeholder="Supplier"/>
                        <input type="hidden" class="form-control" id="SupplierOld" value="#Supplier"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="Save()">Add</button>
                <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="Edit()">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Content/sweetalert/sweetalert.min.js"></script>
    <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/ItemMaster/GetAllData.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
